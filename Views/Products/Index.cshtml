@model IEnumerable<lsad.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductWeight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductContent)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(model=>item.ProductImage)" class="thumbnail"
                 style=" width:48px; height:48px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductWeight)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admins"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                    <span>|</span>
                        } }




                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @if (User.Identity.IsAuthenticated)
            {
                        if (User.IsInRole("Admins"))
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                }
            }

        </td>
    </tr>
}

</table>
